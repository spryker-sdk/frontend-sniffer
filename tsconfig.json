{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "noImplicitAny": false,
        "removeComments": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom"
        ]
    },
    "include": [
        "src/*",
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
